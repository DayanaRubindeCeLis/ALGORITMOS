#include "stdafx.h"
#include <conio.h>
#include <stdlib.h>
#include <math.h>
#include <iostream>

using namespace std;

struct tipox{
    int vec[30];
};

void generar_fibonacci(tipox vec[30],int n){
    int i,j,a=-1, b=1, f=0;
    for(i=0;i<n;i++){
        for(j=0;j<n;j++){
            f=a+b;
            vec[i].vec[j]=f;
            a=b;
            b=f;
        }
    }
}
void mostrar(tipox vec[30], int n){
int i, j;
        for(i=0;i<n;i++){
        for(j=0;j<n;j++){
            cout<<vec[i].vec[j]<<" ";
        }
        cout<<"   ";
    }
    }


int main(){
int opcion,n;
tipox vec[30];
do{
    cout<<endl<<endl<<"M E N U ";
    cout<<endl<<endl<<"1.- Vector de vectores con serie fibonacci.";
    cout<<endl<<"0.- Salir";
    cout<<endl<<endl<<"Elija opcion.:";
    cin>>opcion;
    switch(opcion){
        case 1: do{
            cout<<endl<<"TamaÃ±o del vector:";
            cin>>n; 
                }while(n<=0);
            generar_fibonacci(vec,n);
            mostrar(vec,n);
            break;
    }
}while(opcion!=0);
getch();
return 0;
}Enter file contents here
